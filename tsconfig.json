{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./packages/ui/src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/client/**",
    "**/playground/**",
    "**/examples/**",
    "**/fixtures/**",
    "**/interactive/**",
    "**/test/dts/**"
  ]
}